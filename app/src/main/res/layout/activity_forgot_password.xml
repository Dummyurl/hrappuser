<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/NestedScrollBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="ride.happyy.user.activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp">



        <ride.happyy.user.widgets.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="50dp"
            android:layout_marginBottom="50dp"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/iv_registration_mobile_country_flag"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center_vertical"
                android:padding="2dp"
                app:srcCompat="@drawable/bd"/>


            <Spinner
                android:visibility="visible"
                android:id="@+id/spinner_registration_mobile_country_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:minWidth="40dp"
                android:entries="@array/countrymobilecode"
                android:theme="@style/SpinnerStyle"/>

            <EditText
                android:id="@+id/etxt_registration_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="@string/hint_enter_your_number"
                android:inputType="phone"
                android:minHeight="45dp"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp"
            android:background="@color/underline_color"/>

        <EditText

            android:id="@+id/etxt_phone_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_edit_text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:hint="Enter Phone code"
            android:visibility="gone"
            android:inputType="textEmailAddress"/>


        <EditText
            android:visibility="gone"
            android:id="@+id/etxt_email_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_edit_text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:hint="New Password"
            android:inputType="textWebPassword"/>
        <EditText
            android:visibility="gone"
            android:id="@+id/etxt_retyp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/login_edit_text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:hint="Retype Password"
            android:inputType="textWebPassword"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_round_edges_login"
            android:onClick="onSubmitButtonClick"
            android:text="@string/btn_submit"
            android:textColor="@color/white"/>
        <Button
            android:visibility="gone"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_round_edges_login"
            android:onClick="onCodeCheckButtonClick"
            android:text="@string/btn_submit"
            android:textColor="@color/white"/>

        <Button
            android:visibility="gone"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_round_edges_login"
            android:onClick="onREsetPasswordButtonClick"
            android:text="@string/btn_submit"
            android:textColor="@color/white"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>