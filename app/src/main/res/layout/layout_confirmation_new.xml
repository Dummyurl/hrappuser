
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_fare_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/confirm_request_bike_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="50dp"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    >


                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="2dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_bike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/confirm_request_bike_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_black"
                                android:src="@drawable/ic_bike_trip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="BIKE"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="1dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/confirm_request_bike_fare_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="৳ 50"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="14sp"
                                    android:translationX="2dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>


                    <ImageButton
                        android:id="@+id/confirm_request_bike_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirm_request_car_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="@dimen/confirm_card_view_padding_left"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_car_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/confirm_request_car_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_gray"
                                android:src="@drawable/ic_car_trip" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="CAR"
                                android:textColor="#000"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/confirm_request_car_fare_tv"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="৳ 100"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="14sp"
                                    android:translationX="2dp" />


                            </LinearLayout>


                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <ImageButton
                        android:id="@+id/confirm_request_ca_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/confirm_request_car_one_hour_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="@dimen/confirm_card_view_padding_left"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_car_one_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/confirm_car_min_height"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/confirm_request_car_one_hour_time_icone"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_access_time_black_24dp" />

                            <ImageView
                                android:id="@+id/confirm_request_car_one_hour_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_gray"
                                android:src="@drawable/ic_car_trip" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hire Car"
                                android:textColor="#000"
                                android:textSize="8sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="1 hour"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="8sp"
                                    android:translationX="2dp" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/confirm_request_car_one_hour_fare_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="৳ 250"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#000"
                                android:textSize="10sp"
                                android:translationX="2dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <ImageButton
                        android:id="@+id/confirm_request_car_one_hour_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirm_request_car_two_hours_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="@dimen/confirm_card_view_padding_left"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_car_hire_two_hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/confirm_car_min_height"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_access_time_black_24dp" />

                            <ImageView
                                android:id="@+id/confirm_request_car_two_hours_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_gray"
                                android:src="@drawable/ic_car_trip" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hire Car"
                                android:textColor="#000"
                                android:textSize="8sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="2 hours"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="8sp"
                                    android:translationX="2dp" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/confirm_request_car_two_hour_fare_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="৳ 500"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#000"
                                android:textSize="10sp"
                                android:translationX="2dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <ImageButton
                        android:id="@+id/confirm_request_two_hours_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirm_request_car_four_hours_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="@dimen/confirm_card_view_padding_left"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_car_hire_four_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/confirm_car_min_height"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_access_time_black_24dp" />

                            <ImageView
                                android:id="@+id/confirm_four_hours_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_gray"
                                android:src="@drawable/ic_car_trip" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="HIRE CAR"
                                android:textColor="#000"
                                android:textSize="8sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="4 hours"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="10sp"
                                    android:translationX="2dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/confirm_request_car_four_hours_fare_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="৳ 700"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#000"
                                android:textSize="10sp"
                                android:translationX="2dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <ImageButton
                        android:id="@+id/confirm_request_car_four_hours_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/confirm_request_car_day_ll"
                    android:paddingTop="@dimen/confirm_card_view_padding_top"
                    android:paddingLeft="@dimen/confirm_card_view_padding_left"
                    android:paddingRight="@dimen/confirm_card_view_padding_right"
                    android:paddingBottom="@dimen/confirm_card_view_padding_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="10dp"
                        android:elevation="6dp"
                        card_view:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/linear_layout_car_hire_one_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/confirm_car_min_height"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_access_time_black_24dp" />

                            <ImageView
                                android:id="@+id/confirm_request_car_day_imv"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/bg_round_edges_gray"
                                android:src="@drawable/ic_car_trip" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hire Car"
                                android:textColor="#000"
                                android:textSize="8sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="#d9d9d9" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="1 day"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="8sp"
                                    android:translationX="2dp" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/confirm_request_car_day_fare_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="৳ 1000"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="#000"
                                android:textSize="10sp"
                                android:translationX="2dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <ImageButton
                        android:id="@+id/confirm_request_ca_day_info_imbtn"
                        android:background="@drawable/bg_round_edges_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_info_outline_red_24dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
    <Button
        android:id="@+id/btn_request"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClick"
        android:text="@string/btn_request_la"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_bike"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickBike"
        android:text="@string/btn_request_for_bike"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible"/>
    <Button
        android:id="@+id/btn_request_for_car"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCar"
        android:text="@string/btn_request_for_car"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_one_hour"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarOneHoure"
        android:text="@string/btn_request_for_one_h"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_two_hours"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarTwoHours"
        android:text="@string/btn_request_for_two_h"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_four_hours"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarFourHours"
        android:text="@string/btn_request_for_four_h"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_one_day_primio"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarDayPrimio"
        android:text="@string/btn_request_for_day"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_one_day_noah"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarDayNoah"
        android:text="@string/btn_request_la"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <Button
        android:id="@+id/btn_request_for_car_one_day_hiace"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:padding="5dp"
        android:background="@drawable/bg_round_edges"
        android:gravity="center"
        android:onClick="onRequestRideClickCarHice"
        android:text="@string/btn_request_la"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"/>

</LinearLayout>